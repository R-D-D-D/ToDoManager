
<div class="body2">
  <h5 class="card-title text-center">Reset Password</h5>
  <div class="user">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form', method: :post }) do |f| %>

    <%= devise_error_messages! %>

  <div class="form__group">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<script  src="js/index.js"></script>
